.side-bar 
  .side-bar__header
    .side-bar__header-box
      .side-bar__header-box__user-name
        = current_user.name
      %ul.side-bar__header-box__menu
        %li.side-bar__header-box__menu-user
          = link_to new_group_path, class: "menu__btn" do
            = icon('fa', 'edit')
        %li.side-bar__header-box__menu-group
          = link_to edit_user_path(current_user) , class: "menu__btn" do
            = icon('fa', 'cog')


  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
